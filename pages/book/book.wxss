/* pages/book/book.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
}

.header{position:fixed;
background:#fff;
height:100rpx;
width:100%;
border-top:1px solid #f5f5f5;
border-bottom:1px solid #f5f5f5;
display: flex;
flex-direction: row;
align-items:center;
justify-content: center;
box-shadow: 0 0 3px 0 #e3e3e3;
z-index: 99;
}

.box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50rpx;
  height: 68rpx;
 width:700rpx;
 color:#999;
}

.box image {
  width: 28rpx;
  height: 28rpx;
  margin-right:20rpx;
  margin-bottom:-2rpx;
}

.box text {
  font-size: 28rpx;
}

.sub-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#f5f5f5;
  margin-top:100rpx;
}
.sub-container .head-img {
  width: 107rpx;
  height: 34rpx;
  margin-top:40rpx;
}
.books-container{
  display: flex;
  flex-direction: row;
  margin-top:10rpx;
  flex-wrap: wrap;  /* 换行 */
  padding:0 90rpx;
  justify-content: space-between; 
}
.books-container v-book{
  margin-bottom:10rpx;
}