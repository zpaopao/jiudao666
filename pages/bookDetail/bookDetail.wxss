/* pages/bookDetail/bookDetail.wxss */
.container{
  width:100%;
  background:#f5f5f5;
}
.head{
  display: flex;
  flex-direction: column;
  align-items: center;
  background:#fff;
  width:100%;
  padding:40rpx 0;
}
.head image{
  width:200rpx;
  height:300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}
.head .title{
  font-weight: 600;
  font-size: 38rpx;
  color:#2f2f2f;
  margin-top:20rpx;
}
.head .author{
  color:#999;
  font-size: 28rpx;
}

.sub_container{
  width:690rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
  padding:30rpx;
   margin-top:30rpx;
   background:#fff;
}
.headLine{
  font-size:30rpx;
  font-weight: 600;
  color:#2f2f2f;
  margin-bottom:20rpx;
}
.mark-box v-mark{
  margin-right:15rpx;
  margin-bottom: 10rpx;
}
.mark-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width:100%;
  flex-wrap: wrap;
  padding:0 30rpx;
}
.num{margin-left:10rpx;font-size: 22rpx;color:#aaa;}
/* hack方式 */
.mark-box > v-mark:nth-child(1) > view{
  background:#fffbdd;
}
.mark-box > v-mark:nth-child(2) > view{
  background:#eefbff;
}

.ex-tag1{background:#fffbdd !important;}
.ex-tag2{background:#eefbff !important;}

.content{text-indent: 58rpx;}
.detail_container{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 100rpx;
  font-size: 28rpx;
  color:#666;
}
.vertical{
  display: flex;
  flex-direction: column;
}
.description{color:#999;margin-right:30rpx;}
.post-container{position:fixed;
    bottom:0;
    height:100rpx;
    box-shadow: 1px -1px 1px #e3e3e3;
    background:#fff;
    width:690rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding:0 30rpx;
    justify-content: space-between;
    }
  .post-fake{
    display: flex;
    flex-direction: row;
    align-items: center;
    height:60rpx;
    width:460rpx;
    border:1px solid #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left:20rpx;
  }

  .like{
    margin-right:30rpx;
    margin-top:10rpx;
  }
  .like-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  .posting-container{
    position: fixed;
    bottom:0;
    background:#fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    width:100%;
    z-index: 999;
  }
  .post-header{
    width: 100%;
    border-bottom:1px solid #f5f5f5;
    border-top:1px solid #f5f5f5;
    height:100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  .cancel{color:#666;}
  .post-header text{padding:25rpx;}
  .post-header>text:first-child{
    font-size: 28rpx;
    color:#bbb;}
  .posting-container .comment-container{
    width:690rpx;
    padding:40rpx 30rpx 0 30rpx;
  }
  .post{
    width:690rpx;
    margin:30rpx auto;
    height:56rpx;
    background:#f5f5f5;
    border-radius: 15px;
    padding-left:25rpx;
  }
  .shadow{color:#999;}